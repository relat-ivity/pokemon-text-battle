{
  "name": "pokemon-console-battle",
  "version": "0.4.0",
  "description": "可以在命令行和AI进行第九代随机六六单打",
  "main": "src/index.js",
  "bin": {
    "pokemon-battle": "./index.js"
  },
  "scripts": {
    "battle": "npm run build && node src/battle/pve-battle.js",
    "serverbattle": "npm run build && node scripts/start-server-battle.js",
    "server": "node scripts/start-server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "postinstall": "npm run build"
  },
  "keywords": [
    "pokemon",
    "battle",
    "console",
    "ai",
    "deepseek",
    "showdown"
